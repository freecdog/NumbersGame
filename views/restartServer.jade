extends layout
block headData
    title Restart server
    meta(name="Description" content="restart page is here")

block content
    form(action='/restartServer', method='post')
        input(
            class='inputView',
            name='name',
            placeholder='name',
            required,
            pattern='.{3,16}',
            title='min3max16'
        )
        input(
            type='password',
            class='inputPasswordView',
            name='password',
            placeholder='password',
            required,
            pattern='.{3,16}',
            title='min3max16'
        )
        input(type='checkbox',id='updateOnly',name='updateOnly',checked='true')
        label(for='updateOnly')
            span
            | update only

        input(type='submit', class='inputSubmitView', value='[submit]')

    -if (serverTime)
        p #{serverTime}
    -if (message)
        p #{message}
    -if (error)
        p #{error}
    -if (stdout)
        p #{stdout}
    -if (stderr)
        p #{stderr}
