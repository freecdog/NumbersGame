extends layout
block headData
    title Configuration of Numbers game

    script(src='/javascripts/angular.js')
    script(src='/javascripts/angSettings.js')
    script(src='/javascripts/Localization.js')
block content
    div(ng-app='jApp', ng-controller='jController')
        p
            div(class="menuElement menuPad")
                a(href="/") {{localization.Menu.menu}}

        p(class='menuElement', style='text-align: left;') {{localization.Settings.name}}
        form(id="nameForm")
            input(
                class='inputView',
                name='nickname',
                placeholder='nickname',
                pattern='.{1,16}',
                required='true',
                title='min 1, max 16',
                ng-model='name',
                ng-submit='setName(name)'
            )
            input(
                class='inputSubmitView',
                type='submit',
                value='[change]',
                ng-click='setName(name)',
                ng-show='nameChanged'
            )

        p
        p(id='currentMultiplayerPlayersCount', class='menuElement', style='text-align: left;') {{localization.Settings.multiplayer}}
        p(id='currentMultiplayerPlayersCount', class='menuElement', style='text-align: left;') {{localization.Settings.playerNumbers}}
        table
            tr
                td(ng-repeat='playersCount in [2,3,4]')
                    a(
                        ng-click='setMultiplayerPlayersCount(playersCount)',
                        ng-class='{menuPad: playersCount==multiplayerPlayersCount}'
                    ) {{playersCount}}

        p
            | &nbsp;
